<Window x:Class="Cube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cube"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="900" Loaded="MainWindow_Loaded">
    <Grid RenderTransformOrigin="0.5,0.5">

        <Canvas x:Name="cubeCanvas" Height="453" Margin="10,0,10,0" VerticalAlignment="Center"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="46,10,0,0" VerticalAlignment="Top" Height="39" Width="115" Click="Draw_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="39" Margin="658,10,0,0" VerticalAlignment="Top" Width="129" Click="Rotate_Click"/>
        <TextBox x:Name ="lengthInput" HorizontalAlignment="Left" Margin="179,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name = "check_X" Content="Поворот по Х" HorizontalAlignment="Left" Margin="425,10,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name = "check_Y" Content="Поворот по Y" HorizontalAlignment="Left" Margin="425,30,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name = "check_Z" Content="Поворот по Z" HorizontalAlignment="Left" Margin="425,50,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
